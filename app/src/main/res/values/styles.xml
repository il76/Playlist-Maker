<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderMain">
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/fs_btn</item>
        <item name="android:textColor">@color/main_header</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/fs_btn</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:paddingHorizontal">100dp</item>
    </style>
    <style name="MainPageButton" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/btn_margin</item>
        <item name="android:textSize">@dimen/fs_btn</item>
        <item name="android:textColor">@color/main_text</item>>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_pdg</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/cr_btn</item>
    </style>
    <style name="settings_switch">
        <item name="android:layout_marginTop">@dimen/pdg_root</item>
        <item name="android:layout_marginHorizontal">@dimen/pdg_root</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/settings_item_container_padding</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/settings_btn_text</item>
        <item name="android:thumbTintMode">screen</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="settings_row">
        <item name="android:drawableEnd">@drawable/icon_share</item>
        <item name="android:paddingVertical">@dimen/settings_item_container_padding</item>
        <item name="android:paddingHorizontal">@dimen/pdg_root</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/settings_btn_text</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
    </style>
</resources>