<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Памятка по шрифтам -->
    <style name="Font100">
        <item name="android:fontFamily">@font/ys_display_thin</item>
    </style>
    <style name="Font300">
        <item name="android:fontFamily">@font/ys_display_light</item>
    </style>
    <style name="Font400">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="Font500">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="Font600">
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="Font700">
        <item name="android:fontFamily">@font/ys_display_heavy</item>
    </style>
<!--    Основные стили -->
    <style name="HeaderMain" parent="Font400">
        <item name="android:textSize">@dimen/fs_btn</item>
        <item name="android:textColor">@color/main_header</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/fs_btn</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MainPageButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/btn_margin</item>
        <item name="android:textSize">@dimen/fs_btn</item>
<!--        атрибуты ?attr/colorPrimary я отсюда убрал - кнопки одинаковые в обеих темах. Но в ТЗ написано их использовать - этот момент я не понимаю, зачем так-->
        <item name="android:textColor">@color/black</item>>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_pdg</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/cr_btn</item>
    </style>
    <style name="SettingsSwitch" parent="Font400">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/pdg_root</item>
        <item name="android:layout_marginHorizontal">@dimen/pdg_root</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/settings_item_container_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>>
        <item name="android:textSize">@dimen/settings_btn_text</item>
        <item name="android:thumbTintMode">screen</item>
        <item name="thumbTint">@color/switcher_thumb</item>
        <item name="trackTint">@color/switcher_track</item>
    </style>
    <style name="SettingsRow" parent="Font400">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/icon_share</item>
        <item name="android:paddingVertical">@dimen/settings_item_container_padding</item>
        <item name="android:paddingHorizontal">@dimen/pdg_root</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>>
        <item name="android:textSize">@dimen/settings_btn_text</item>
    </style>
    <style name="SearchIconClear">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginHorizontal">12dp</item>
    </style>

    <style name="TrackViewHolder">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">0dp</item>
    </style>
    <style name="TrackViewCover">
        <item name="android:layout_width">@dimen/track_cover_size</item>
        <item name="android:layout_height">@dimen/track_cover_size</item>
    </style>
    <style name="TrackViewTitle" parent="Font400">
        <item name="android:textSize">@dimen/settings_btn_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TrackViewArtist" parent="Font400">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/settings_icon_fill</item>
    </style>
    <style name="TrackViewDividerCircle">
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>
    <style name="SearchTextError" parent="Font500">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="SearchRefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/background_secondary</item>>
        <item name="android:backgroundTint">@color/settings_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SearchHistoryTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">42dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="PlayerDetailsRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="layout_constrainedWidth">true</item>
    </style>
    <style name="PlayerDetailsRow.Name">
        <item name="android:textColor">@color/player_info_name</item>>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="PlayerDetailsRow.Value">
        <item name="android:textColor">?attr/colorOnPrimary</item>>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>

    </style>
    <style name="MediaTab" parent="Font500">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@color/back_icon_fill</item>
        <item name="tabBackground">@color/background_secondary</item>
    </style>

    <style name="MediaEmptyResult" parent="Font500">
        <item name="android:textColor">?attr/colorOnPrimary</item>>
        <item name="android:textSize">19sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="BottomSheetHeader" parent="Font500">
        <item name="android:textColor">?attr/colorOnPrimary</item>>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="PlayerPlaylists.Row.PlaylistName" parent="Font400">
        <item name="android:textSize">@dimen/settings_btn_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="PlayerPlaylists.Row.PlaylistItemsCounter" parent="Font400">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/settings_icon_fill</item>
    </style>
    <style name="PlaylistAdd.Input" parent="Font400">
        <item name="android:textSize">16sp</item>
        <item name="textFillColor">@color/playlist_create_disabled</item>
    </style>
    <style name="PlaylistAdd.ButtonCreate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/playlist_create_disabled</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_color</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_color</item>
    </style>
    <style name="PlaylistsList.caption" parent="Font400">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

</resources>