<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/fs_btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">100dp</item>
    </style>

    <style name="MainPageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/btn_margin</item>
        <item name="android:textSize">@dimen/fs_btn</item>
        <item name="android:textColor">@color/black</item>>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="settings_switch">
        <item name="android:layout_marginTop">@dimen/pdg_root</item>
        <item name="android:layout_marginHorizontal">@dimen/pdg_root</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/settings_item_container_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_btn_text</item>
        <item name="android:thumbTintMode">screen</item>
    </style>
    <style name="settings_row">
        <item name="android:drawableEnd">@drawable/icon_share</item>
        <item name="android:paddingVertical">@dimen/settings_item_container_padding</item>
        <item name="android:paddingHorizontal">@dimen/pdg_root</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_btn_text</item>
        <item name="android:fontWeight">500</item>
    </style>
</resources>