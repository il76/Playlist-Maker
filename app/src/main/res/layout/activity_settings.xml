<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:id="@+id/activity_settings"
    >
    <!--
    Пока оставил старый вариант, он соответствует фигме. Компонент Toolbar не смог подогнать по отступам
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:padding="@dimen/header_padding"
        >
        <ImageView
            android:layout_width="@dimen/header_image_layout_size"
            android:layout_height="@dimen/header_image_layout_size"
            android:padding="@dimen/header_image_padding"
            android:src="@drawable/icon_back"
            android:onClick="btnBackClick"
            android:tooltipText="@string/button_back"
            android:contentDescription="@string/button_back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/header_text_leftpadding"
            android:text="@string/button_settings"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:textFontWeight="500"
            android:textSize="@dimen/fs_btn" />
    </LinearLayout>
    <!--
    Как кастомизировать размер иконки? Она на вид чуть крупнее, чем в фигме
    -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:text="@string/settings_button_darktheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/settings_switch"
        app:thumbTint="@color/switcher_thumb"
        app:trackTint="@color/switcher_track"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_button_share"
        android:drawableEnd="@drawable/icon_share"
        style="@style/settings_row"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_button_support"
        android:drawableEnd="@drawable/icon_support"
        style="@style/settings_row"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_button_user_agreement"
        android:drawableEnd="@drawable/icon_user_agreement"
        style="@style/settings_row"
        />
</LinearLayout>