<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TrackViewHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_cover"
        style="@style/TrackViewCover"
        android:src="@drawable/search_cover_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/btn_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name"
            style="@style/PlayerPlaylists.Row.PlaylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:text="@string/playlist_name_placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playlist_items_cnt"
                style="@style/PlayerPlaylists.Row.PlaylistItemsCounter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="0" />

            <TextView
                android:id="@+id/track_list_time"
                style="@style/PlayerPlaylists.Row.PlaylistItemsCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playlist_tracks_cnt_description" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/settings_icon_height"
        android:layout_height="@dimen/settings_icon_height"
        android:layout_gravity="center"
        android:src="@drawable/icon_arrow_right" />
</LinearLayout>