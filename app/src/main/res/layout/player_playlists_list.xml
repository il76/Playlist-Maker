<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_playlists_list"
    style="@style/TrackViewHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="13dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_cover"
        style="@style/TrackViewCover"
        android:src="@drawable/search_cover_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/btn_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name"
            style="@style/TrackViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:text="@string/playlist_name_placeholder" />

        <TextView
            android:id="@+id/playlist_counter"
            style="@style/TrackViewArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/playlist_tracks_cnt_description" />
    </LinearLayout>
</LinearLayout>


