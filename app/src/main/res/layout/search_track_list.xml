<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TrackViewHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/track_list_cover"
        style="@style/TrackViewCover"
        android:src="@drawable/search_cover_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/btn_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_list_track"
            style="@style/TrackViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:text="@string/track_title_placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/track_list_artist"
                style="@style/TrackViewArtist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/track_artist_placeholder" />

            <ImageView
                android:id="@+id/circle_divider"
                style="@style/TrackViewDividerCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/track_list_time"
                style="@style/TrackViewArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track_time_placeholder" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/settings_icon_height"
        android:layout_height="@dimen/settings_icon_height"
        android:layout_gravity="center"
        android:src="@drawable/icon_arrow_right" />
</LinearLayout>