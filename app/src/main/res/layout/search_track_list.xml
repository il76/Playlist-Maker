<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/TrackViewHolder"
    >
    <ImageView
        android:id="@+id/track_list_cover"
        style="@style/TrackViewCover"
        android:src="@drawable/search_cover_placeholder"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/btn_margin"
        android:layout_gravity="center"
        android:layout_weight="1">
        <TextView
            android:id="@+id/track_list_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_title_placeholder"
            android:fontFamily="@font/ys_display_regular"
            style="@style/TrackViewTitle"
            android:ellipsize="end"
            android:maxLines="1"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/track_list_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                style="@style/TrackViewArtist"
                android:singleLine="true"
                android:text="@string/track_artist_placeholder"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/circle_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/TrackViewDividerCircle"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/track_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track_time_placeholder"
                style="@style/TrackViewArtist"
            />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/settings_icon_height"
        android:layout_height="@dimen/settings_icon_height"
        android:src="@drawable/icon_arrow_right"
        android:layout_gravity="center"/>
</LinearLayout>