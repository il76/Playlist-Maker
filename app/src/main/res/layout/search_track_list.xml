<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingStart="13dp"
    android:paddingEnd="12dp"
    >
    <ImageView
        android:id="@+id/track_list_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="center"
        android:layout_weight="1">
        <TextView
            android:id="@+id/track_list_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название трека Название трека Название трека"
            android:fontFamily="@font/ys_display_regular"
            android:ellipsize="end"
            android:textSize="16sp"
            android:maxLines="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
        <TextView
            android:id="@+id/track_list_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Исполнитель"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end"

            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:src="@drawable/circle"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
            <TextView
            android:id="@+id/track_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="11sp"
            />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_user_agreement"
        android:layout_gravity="center"/>


</LinearLayout>