<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/newPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/new_playlist"
        style="@style/SearchRefreshButton"
        android:layout_marginTop="24dp"
        />
    <TextView
        android:layout_marginTop="46dp"
        android:id="@+id/empty_playlists_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/search_nothing_found"
        style="@style/MediaEmptyResult"
        android:text="@string/media_empty_playlists"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlists_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/pdg_root"
        android:layout_marginVertical="8dp"
        android:layout_weight="1"
        android:padding="0dp"
        tools:listitem="@layout/media_playlists_list"
        />
</LinearLayout>